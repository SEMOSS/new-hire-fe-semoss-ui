{
    "version": "1.0.0",
    "description": "SEMOSS Analytics Platform",
    "main": "index.js",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install",
        "start": "pnpm run dev",
        "dev": "run-p dev:legacy dev:client",
        "dev:legacy": "cd ./packages/legacy && pnpm run dev",
        "dev:client": "cd ./packages/client && pnpm run dev",
        "build": "run-p build:legacy build:client",
        "build:legacy": "cd ./packages/legacy && pnpm run build",
        "build:client": "cd ./packages/client && pnpm run build",
        "lint": "run-p lint:legacy lint:client",
        "lint:legacy": "cd ./packages/legacy && pnpm run lint",
        "lint:legacy:fix": "cd ./packages/legacy && pnpm run lint:fix",
        "lint:client": "cd ./packages/client && pnpm run lint",
        "lint:client:fix": "cd ./packages/client && pnpm run lint:fix",
        "format": "run-p format:legacy format:client",
        "format:legacy": "cd ./packages/legacy && pnpm run format",
        "format:legacy:fix": "cd ./packages/legacy && pnpm run format:fix",
        "format:client": "cd ./packages/client && pnpm run format",
        "format:client:fix": "cd ./packages/client && pnpm run format:fix",
        "fix": "run-p fix:legacy fix:client",
        "fix:legacy": "run-s format:legacy:fix lint:legacy:fix",
        "fix:client": "run-s format:client:fix lint:client:fix"
    },
    "author": "",
    "license": "GPL-2.0",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "husky": "^8.0.3",
        "npm-run-all": "^4.1.5"
    }
}
