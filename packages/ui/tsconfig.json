{
    "compilerOptions": {
        /* Lang and Env */
        "lib":["es6", "dom", "ES2015"],
        "target": "es5",
        "jsx": "react-jsx",

        /* Modules */
        "baseUrl": "src",
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"]
        },

        /* Emit */
        "declaration": true,
        "declarationDir": "./types",
        "emitDeclarationOnly": true,
        "outDir": "dist",

        /* Skip */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.stories.tsx"]
}
