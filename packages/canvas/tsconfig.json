{
    "compilerOptions": {
        /* Lang and Env */
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "es6",
        "jsx": "react-jsx",
        "strict": true,

        /* Modules */
        "baseUrl": "src",
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"]
        },

        /* Emit */
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,

        /* Skip */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
