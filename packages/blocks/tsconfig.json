{
    "compilerOptions": {
        /* Lang and Env */
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "es6",
        "jsx": "react-jsx",
        "strict": true,

        /* Modules */
        "baseUrl": "src",
        "outDir": "./dist",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"],
            "react": ["./node_modules/@types/react"]
        },
        /* Declaration */
        "declaration": true,
        "declarationDir": "./dist/dts",
        "declarationMap": true,
        "emitDeclarationOnly": true,

        /* Skip */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
